# Database mode switch
# Default (if unset): pglite
DB_MODE=pglite

# Optional aliases:
# DATABASE_MODE=external-postgres
# USE_EXTERNAL_DB=true

# Required when DB_MODE=external-postgres (or USE_EXTERNAL_DB=true)
# DATABASE_URL_EXTERNAL=postgresql://postgres:postgres@127.0.0.1:5432/hospital

# PGlite settings (used only in pglite mode)
PGLITE_PORT=5433

# setup.js runs by default in pglite mode.
# Set to false to skip.
PGLITE_RUN_SETUP=true
